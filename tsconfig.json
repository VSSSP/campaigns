{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": ".",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "skipLibCheck": true
    },
    "include": ["src/**/*", "tests/**/*"],
    "exclude": ["node_modules", "dist"]
}